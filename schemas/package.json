{
  "name": "empa-schemas",
  "version": "1.0.0",
  "main": "types.ts",
  "author": "Emanuel S",
  "private": true,
  "files": [
    "types.ts",
    "schemas/"
  ],
  "dependencies": {
    "json-schema-to-typescript": "^10.1.5",
    "onchange": "^7.1.0"
  },
  "scripts": {
    "compile-schemas": "json2ts -i 'schemas/*.json' -o types && cat types/* > types.ts && rm types -r",
    "watch:compile-schemas": "onchange 'schemas/*.json' -- yarn run compile-schemas",
    "dev": "npm run compile-schemas && npm run watch:compile-schemas",
    "build": "npm run compile-schemas"
  }
}
